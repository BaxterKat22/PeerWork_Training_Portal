        .choice-btn { display: block; width: 100%; text-align: left; margin: 10px 0; padding: 12px; border: 1px solid #ddd; border-radius: 6px; cursor: pointer; background: #fff; transition: 0.3s; }
        .choice-btn:hover { background: #e8f4fd; border-color: #3498db; }
        #result-box { margin-top: 20px; padding: 15px; border-radius: 6px; display: none; }
        .correct { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
        .incorrect { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
    </style>
